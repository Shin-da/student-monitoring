{
  "name": "student-monitoring-frontend",
  "version": "1.0.0",
  "description": "Frontend build system for Student Monitoring System",
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "build": "npm run build:css && npm run build:js",
    "build:dev": "npm run build:css:dev && npm run build:js:dev",
    "build:css": "npm run build:css:prod",
    "build:css:dev": "sass --style=expanded --source-map src/scss/app.scss:public/assets/app.min.css",
    "build:css:prod": "sass --style=compressed --no-source-map src/scss/app.scss:public/assets/app.min.css",
    "build:js": "npm run build:js:prod",
    "build:js:dev": "webpack --mode=development",
    "build:js:prod": "webpack --mode=production",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass --watch --style=expanded --source-map src/scss/app.scss:public/assets/app.min.css",
    "watch:js": "webpack --mode=development --watch",
    "clean": "rimraf public/assets/*.min.*",
    "optimize:images": "imagemin public/assets/images/* --out-dir=public/assets/images/optimized",
    "lighthouse": "lighthouse http://localhost/student-monitoring --output=html --output-path=./lighthouse-report.html"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
